<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bing_logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/img" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bing_logo"
        android:layout_marginVertical="25dp"
        android:fontFamily="serif"
        android:text="Student Registration System"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/show_all_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="1. Show all tables" />

            <Button
                android:id="@+id/list_class_students_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="2. List class students" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll1">

            <Button
                android:id="@+id/show_preq_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="3. Show prerequisites" />

            <Button
                android:id="@+id/enroll_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="4. Enroll a Student" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll2">

            <Button
                android:id="@+id/drop_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="5. Drop a student" />

            <Button
                android:id="@+id/delete_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="6. delete a student" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="CS532 Database Systems"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Instructor: Weiyi Meng"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Project 2 - Student Registration System"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Spring 2022"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content" />

        <TextView
            android:text="By - Shahu Ronghe, Lalji Devda, Lovelesh Colaco"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>